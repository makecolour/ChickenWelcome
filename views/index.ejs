<!DOCTYPE html>
<html lang="vi" class="scroll-smooth" ng-app="fptApp">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon">
    <title><%= title %></title>
    <%- include('partials/head') %>
</head>
<body class="bg-dark text-gray-200 overflow-x-hidden font-sans leading-relaxed" ng-controller="MainController">

<!-- LANGUAGE SWITCHER -->
<div class="fixed top-6 right-8 z-[60] flex items-center gap-2 bg-card border border-gray-700 rounded-full p-1 shadow-lg" ng-cloak>
    <button ng-click="setLang('vi')" class="px-4 py-1.5 rounded-full text-sm font-bold transition-all duration-300" ng-class="{'bg-accentGreen text-black': currentLang === 'vi', 'text-gray-400 hover:text-white': currentLang !== 'vi'}">VN</button>
    <button ng-click="setLang('en')" class="px-4 py-1.5 rounded-full text-sm font-bold transition-all duration-300" ng-class="{'bg-accentBlue text-black': currentLang === 'en', 'text-gray-400 hover:text-white': currentLang !== 'en'}">EN</button>
</div>

<!-- NAVIGATION -->
<nav class="fixed right-8 top-1/2 transform -translate-y-1/2 z-50 flex flex-col gap-4" ng-cloak>
    <a ng-repeat="sec in sections" href="javascript:void(0)" ng-click="scrollTo(sec.id)" class="nav-dot w-3 h-3 rounded-full bg-gray-600 hover:bg-accentGreen cursor-pointer block" ng-class="{ 'active': activeSection === sec.id }" title="{{ sec.name }}"></a>
</nav>

<!-- MAIN CONTENT -->
<main id="main-content">

    <!-- SECTION 1: HERO -->
    <section id="sec-1" class="min-h-screen flex items-center justify-center relative glow-bg-green py-24" scroll-observer>
        <div class="container mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
            <div class="z-10">
                <div class="anim-el inline-block px-4 py-2 rounded-full bg-green-900/30 text-accentGreen font-bold text-sm mb-6 border border-accentGreen/20">FPT UNIVERSITY</div>
                <h1 class="anim-el text-6xl md:text-7xl lg:text-8xl font-extrabold leading-[1.1] mb-8 text-white tracking-tight">SOFTWARE <br><span class="text-transparent bg-clip-text bg-gradient-to-r from-accentGreen to-accentBlue">ENGINEERING</span></h1>
                <p class="anim-el text-2xl md:text-3xl text-white mt-4 font-medium" ng-bind="content.hero_subtitle"></p>
                <p class="anim-el text-muted mt-6 text-lg md:text-xl max-w-lg leading-relaxed" ng-bind="content.hero_desc"></p>
            </div>
            <div class="anim-el h-[400px] lg:h-[600px] rounded-3xl overflow-hidden border border-gray-800 shadow-2xl z-10 relative group">
                <div class="absolute inset-0 bg-gradient-to-t from-dark/80 to-transparent z-10"></div>
                <img src="/images/LNAT_Hinh1.jpg" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" alt="Coding">
            </div>
        </div>
    </section>

    <!-- SECTION 2: WHY FPT -->
    <section id="sec-2" class="min-h-screen flex items-center justify-center relative py-24" scroll-observer>
        <div class="container mx-auto px-6">
            <h2 class="anim-el text-4xl md:text-5xl font-bold mb-20 pl-6 border-l-8 border-accentGreen text-white leading-tight" ng-bind-html="content.why_title"></h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-10">
                <div class="anim-el bg-card p-8 rounded-3xl border border-gray-800 hover:border-accentGreen transition-all duration-300 hover:-translate-y-2">
                    <div class="w-16 h-16 rounded-2xl bg-accentGreen/10 text-accentGreen flex items-center justify-center text-3xl mb-8"><i class="fa-solid fa-certificate"></i></div>
                    <h3 class="text-2xl font-bold text-white mb-4" ng-bind="content.why_1_title"></h3>
                    <p class="text-muted leading-relaxed" ng-bind="content.why_1_desc"></p>
                </div>
                <div class="anim-el bg-card p-8 rounded-3xl border border-gray-800 hover:border-accentGreen transition-all duration-300 hover:-translate-y-2">
                    <div class="w-16 h-16 rounded-2xl bg-accentGreen/10 text-accentGreen flex items-center justify-center text-3xl mb-8"><i class="fa-solid fa-briefcase"></i></div>
                    <h3 class="text-2xl font-bold text-white mb-4" ng-bind="content.why_2_title"></h3>
                    <p class="text-muted leading-relaxed" ng-bind="content.why_2_desc"></p>
                </div>
                <div class="anim-el bg-card p-8 rounded-3xl border border-gray-800 hover:border-accentGreen transition-all duration-300 hover:-translate-y-2">
                    <div class="w-16 h-16 rounded-2xl bg-accentGreen/10 text-accentGreen flex items-center justify-center text-3xl mb-8"><i class="fa-solid fa-earth-asia"></i></div>
                    <h3 class="text-2xl font-bold text-white mb-4" ng-bind="content.why_3_title"></h3>
                    <p class="text-muted leading-relaxed" ng-bind="content.why_3_desc"></p>
                </div>
            </div>
        </div>
    </section>

    <!-- SECTION 3: MARKET -->
    <section id="sec-3" class="min-h-screen flex items-center justify-center relative glow-bg-blue py-24" scroll-observer>
        <div class="container mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24 items-center">
            <div>
                <h2 class="anim-el text-4xl md:text-5xl font-bold mb-12 text-white leading-tight" ng-bind-html="content.market_title"></h2>
                <div class="flex flex-wrap gap-12 mb-12">
                    <div class="anim-el">
                        <div class="text-6xl md:text-7xl font-black text-white tracking-tight">500K<span class="text-accentBlue">+</span></div>
                        <div class="text-sm uppercase tracking-[0.2em] mt-3 text-muted font-bold" ng-bind="content.market_stat_1"></div>
                    </div>
                    <div class="anim-el">
                        <div class="text-6xl md:text-7xl font-black text-white tracking-tight">Top 10</div>
                        <div class="text-sm uppercase tracking-[0.2em] mt-3 text-muted font-bold" ng-bind="content.market_stat_2"></div>
                    </div>
                </div>
                <ul class="space-y-6">
                    <li class="anim-el flex items-start gap-4 text-xl text-gray-300"><i class="fa-solid fa-check text-accentGreen mt-1"></i> <span ng-bind="content.market_point_1"></span></li>
                    <li class="anim-el flex items-start gap-4 text-xl text-gray-300"><i class="fa-solid fa-check text-accentGreen mt-1"></i> <span ng-bind="content.market_point_2"></span></li>
                </ul>
            </div>
            <div class="anim-el bg-card/80 backdrop-blur-sm border border-accentBlue/30 p-10 rounded-3xl shadow-[0_0_50px_rgba(0,184,255,0.1)]">
                <div class="w-16 h-16 rounded-2xl bg-accentBlue/20 text-accentBlue flex items-center justify-center text-3xl mb-8"><i class="fa-solid fa-arrow-trend-up"></i></div>
                <h3 class="text-3xl font-bold text-white mb-6" ng-bind="content.market_opp_title"></h3>
                <p class="text-muted text-lg leading-relaxed" ng-bind="content.market_opp_desc"></p>
            </div>
        </div>
    </section>

    <!-- SECTION 4: METHODOLOGY -->
    <section id="sec-4" class="min-h-screen flex items-center justify-center relative py-24" scroll-observer>
        <div class="container mx-auto px-6">
            <h2 class="anim-el text-center text-4xl md:text-5xl font-bold mb-20 text-white" ng-bind="content.method_title"></h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-10 lg:gap-16">
                <div class="anim-el bg-card p-10 rounded-3xl border border-gray-800 hover:border-accentGreen transition-all duration-300">
                    <h3 class="text-3xl font-bold text-white mb-8 flex items-center gap-4"><i class="fa-solid fa-robot text-accentGreen text-2xl"></i> <span ng-bind="content.method_tech_title"></span></h3>
                    <ul class="space-y-5 text-lg text-muted">
                        <li class="flex items-center gap-4"><span class="w-2 h-2 bg-accentGreen rounded-full"></span> <strong>ChatGPT:</strong> <span ng-bind="content.method_tech_1"></span></li>
                        <li class="flex items-center gap-4"><span class="w-2 h-2 bg-accentGreen rounded-full"></span> <strong>GitHub Copilot:</strong> <span ng-bind="content.method_tech_2"></span></li>
                        <li class="flex items-center gap-4"><span class="w-2 h-2 bg-accentGreen rounded-full"></span> <strong>Figma AI:</strong> <span ng-bind="content.method_tech_3"></span></li>
                    </ul>
                </div>
                <div class="anim-el bg-card p-10 rounded-3xl border border-gray-800 hover:border-accentBlue transition-all duration-300">
                    <h3 class="text-3xl font-bold text-white mb-8 flex items-center gap-4"><i class="fa-solid fa-diagram-project text-accentBlue text-2xl"></i> <span ng-bind="content.method_pbl_title"></span></h3>
                    <ul class="space-y-5 text-lg text-muted">
                        <li class="flex items-center gap-4"><span class="w-2 h-2 bg-accentBlue rounded-full"></span> <span ng-bind="content.method_pbl_1"></span></li>
                        <li class="flex items-center gap-4"><span class="w-2 h-2 bg-accentBlue rounded-full"></span> <span ng-bind="content.method_pbl_2"></span></li>
                        <li class="flex items-center gap-4"><span class="w-2 h-2 bg-accentBlue rounded-full"></span> <span ng-bind="content.method_pbl_3"></span></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- SECTION 5: ROADMAP -->
    <section id="sec-5" class="min-h-screen flex items-center justify-center relative glow-bg-green py-24" scroll-observer>
        <div class="container mx-auto px-6 text-center">
            <h2 class="anim-el text-4xl md:text-5xl font-bold mb-24 text-white" ng-bind="content.roadmap_title"></h2>
            <div class="relative max-w-6xl mx-auto">
                <div class="absolute top-1/2 left-0 w-full h-1 bg-gray-800 transform -translate-y-1/2 hidden md:block z-0 rounded-full"></div>
                <div class="grid grid-cols-1 md:grid-cols-5 gap-6 relative z-10">
                    <!-- 1: Prep - Yellow -->
                    <div class="anim-el bg-card p-6 rounded-2xl border border-yellow-500/30 text-center md:transform md:hover:-translate-y-4 transition-transform duration-300 shadow-lg">
                        <div class="w-16 h-16 rounded-full bg-dark border-4 border-yellow-500 text-white font-bold flex items-center justify-center mx-auto mb-6 relative z-20 text-lg shadow-[0_0_20px_rgba(234,179,8,0.3)]">Prep</div>
                        <h4 class="text-yellow-500 font-bold text-xl mb-2" ng-bind="content.roadmap_1_title"></h4>
                        <p class="text-sm text-muted" ng-bind="content.roadmap_1_desc"></p>
                    </div>
                    <!-- 2: Phase 1 - Emerald -->
                    <div class="anim-el bg-card p-6 rounded-2xl border border-emerald-500/30 text-center md:transform md:hover:-translate-y-4 transition-transform duration-300 shadow-lg">
                        <div class="w-16 h-16 rounded-full bg-dark border-4 border-emerald-500 text-white font-bold flex items-center justify-center mx-auto mb-6 relative z-20 text-lg shadow-[0_0_20px_rgba(16,185,129,0.3)]">1-3</div>
                        <h4 class="text-emerald-400 font-bold text-xl mb-2" ng-bind="content.roadmap_2_title"></h4>
                        <p class="text-sm text-muted" ng-bind="content.roadmap_2_desc"></p>
                    </div>
                    <!-- 3: Phase 2 - Cyan -->
                    <div class="anim-el bg-card p-6 rounded-2xl border border-cyan-500/30 text-center md:transform md:hover:-translate-y-4 transition-transform duration-300 shadow-lg">
                        <div class="w-16 h-16 rounded-full bg-dark border-4 border-cyan-500 text-white font-bold flex items-center justify-center mx-auto mb-6 relative z-20 text-lg shadow-[0_0_20px_rgba(6,182,212,0.3)]">4-5</div>
                        <h4 class="text-cyan-400 font-bold text-xl mb-2" ng-bind="content.roadmap_3_title"></h4>
                        <p class="text-sm text-muted" ng-bind="content.roadmap_3_desc"></p>
                    </div>
                    <!-- 4: Phase 3 - Orange -->
                    <div class="anim-el bg-card p-6 rounded-2xl border border-orange-500/30 text-center md:transform md:hover:-translate-y-4 transition-transform duration-300 shadow-lg">
                        <div class="w-16 h-16 rounded-full bg-dark border-4 border-orange-500 text-white font-bold flex items-center justify-center mx-auto mb-6 relative z-20 text-lg shadow-[0_0_20px_rgba(249,115,22,0.3)]">6</div>
                        <h4 class="text-orange-400 font-bold text-xl mb-2" ng-bind="content.roadmap_4_title"></h4>
                        <p class="text-sm text-muted" ng-bind="content.roadmap_4_desc"></p>
                    </div>
                    <!-- 5: Phase 4+5 - Purple/Rose -->
                    <div class="anim-el bg-card p-6 rounded-2xl border border-purple-500/30 text-center md:transform md:hover:-translate-y-4 transition-transform duration-300 shadow-lg">
                        <div class="w-16 h-16 rounded-full bg-dark border-4 border-purple-500 text-white font-bold flex items-center justify-center mx-auto mb-6 relative z-20 text-lg shadow-[0_0_20px_rgba(168,85,247,0.3)]">7-9</div>
                        <h4 class="text-purple-400 font-bold text-xl mb-2" ng-bind="content.roadmap_5_title"></h4>
                        <p class="text-sm text-muted" ng-bind="content.roadmap_5_desc"></p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- PHASE PREP: YELLOW -->
    <section id="sec-prep" class="min-h-screen flex items-center justify-center relative py-24" scroll-observer>
        <div class="container mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <div class="order-1 anim-el grid grid-cols-2 gap-4 relative">
                <div class="absolute inset-0 bg-yellow-500/10 blur-3xl -z-10 transform scale-110"></div>
                <div class="space-y-4 mt-8">
                    <img src="/images/LUK.jpg" class="rounded-2xl shadow-lg w-full h-48 object-cover hover:scale-105 transition-transform duration-500 border border-gray-800" alt="English Class">
                    <div class="bg-card border border-gray-700 p-6 rounded-2xl flex flex-col justify-center items-center text-center h-48">
                        <i class="fa-solid fa-earth-americas text-4xl text-yellow-500 mb-3"></i>
                        <span class="font-bold text-white">Global Ready</span>
                    </div>
                </div>
                <div class="space-y-4">
                    <div class="bg-card border border-gray-700 p-6 rounded-2xl flex flex-col justify-center items-center text-center h-48">
                        <i class="fa-solid fa-comments text-4xl text-yellow-500 mb-3"></i>
                        <span class="font-bold text-white">Confidence</span>
                    </div>
                    <img src="/images/nhaccu.jpg" class="rounded-2xl shadow-lg w-full h-64 object-cover hover:scale-105 transition-transform duration-500 border border-gray-800" alt="Soft Skills">
                </div>
            </div>
            <div class="order-2">
                <div class="anim-el inline-block px-4 py-2 rounded-lg border border-yellow-500 text-yellow-500 text-xs font-bold mb-6 tracking-[0.2em] uppercase" ng-bind="content.prep_label"></div>
                <h2 class="anim-el text-4xl md:text-5xl font-bold mb-6 text-white" ng-bind="content.prep_title"></h2>
                <p class="anim-el text-muted text-lg mb-8" ng-bind="content.prep_desc"></p>
                <ul class="space-y-6">
                    <div class="anim-el flex gap-5 group">
                        <div class="w-14 h-14 rounded-full bg-yellow-500/10 text-yellow-500 flex items-center justify-center text-2xl flex-shrink-0 group-hover:bg-yellow-500 group-hover:text-black transition-colors duration-300"><i class="fa-solid fa-comment-dots"></i></div>
                        <div><p class="text-gray-300 leading-relaxed" ng-bind="content.prep_feat_1"></p></div>
                    </div>
                    <div class="anim-el flex gap-5 group">
                        <div class="w-14 h-14 rounded-full bg-yellow-500/10 text-yellow-500 flex items-center justify-center text-2xl flex-shrink-0 group-hover:bg-yellow-500 group-hover:text-black transition-colors duration-300"><i class="fa-solid fa-users"></i></div>
                        <div><p class="text-gray-300 leading-relaxed" ng-bind="content.prep_feat_2"></p></div>
                    </div>
                    <div class="anim-el flex gap-5 group">
                        <div class="w-14 h-14 rounded-full bg-yellow-500/10 text-yellow-500 flex items-center justify-center text-2xl flex-shrink-0 group-hover:bg-yellow-500 group-hover:text-black transition-colors duration-300"><i class="fa-solid fa-guitar"></i></div>
                        <div><p class="text-gray-300 leading-relaxed" ng-bind="content.prep_feat_3"></p></div>
                    </div>
                </ul>
            </div>
        </div>
    </section>

    <!-- PHASE 1: EMERALD (Green) -->
    <section id="sec-phase1" class="min-h-screen flex items-center justify-center relative py-24" scroll-observer>
        <div class="container mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <div class="order-2 lg:order-1">
                <div class="anim-el inline-block px-4 py-2 rounded-lg border border-emerald-500 text-emerald-400 text-xs font-bold mb-6 tracking-[0.2em] uppercase" ng-bind="content.phase1_label"></div>
                <h2 class="anim-el text-4xl md:text-5xl font-bold mb-6 text-white" ng-bind="content.phase1_title"></h2>
                <p class="anim-el text-muted text-lg mb-8" ng-bind="content.phase1_desc"></p>
                <ul class="space-y-4">
                    <li class="anim-el flex items-center gap-4 bg-card p-4 rounded-xl border border-gray-800 hover:border-emerald-500 transition-colors duration-300">
                        <i class="fa-solid fa-person-military-pointing text-emerald-400 text-2xl"></i> <span class="font-bold text-white" ng-bind="content.phase1_feat_1"></span>
                    </li>
                    <li class="anim-el flex items-center gap-4 bg-card p-4 rounded-xl border border-gray-800 hover:border-emerald-500 transition-colors duration-300">
                        <i class="fa-solid fa-language text-emerald-400 text-2xl"></i> <span class="font-bold text-white" ng-bind="content.phase1_feat_2"></span>
                    </li>
                    <li class="anim-el flex items-center gap-4 bg-card p-4 rounded-xl border border-gray-800 hover:border-emerald-500 transition-colors duration-300">
                        <i class="fa-solid fa-code text-emerald-400 text-2xl"></i> <span class="font-bold text-white" ng-bind="content.phase1_feat_3"></span>
                    </li>
                </ul>
            </div>
            <div class="order-1 lg:order-2 anim-el h-[400px] rounded-3xl overflow-hidden border border-gray-800 relative group">
                <div class="absolute inset-0 bg-emerald-500/10 z-10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <img src="/images/ftalent.jpg" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" alt="Phase 1">
            </div>
        </div>
    </section>

    <!-- PHASE 2: CYAN (Blue/Cyan) -->
    <section id="sec-phase2" class="min-h-screen flex items-center justify-center relative py-24" scroll-observer>
        <div class="container mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <div class="anim-el h-[400px] rounded-3xl overflow-hidden border border-gray-800 relative group">
                <div class="absolute inset-0 bg-cyan-500/10 z-10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <img src="/images/project.png" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" alt="Phase 2">
            </div>
            <div>
                <div class="anim-el inline-block px-4 py-2 rounded-lg border border-cyan-500 text-cyan-400 text-xs font-bold mb-6 tracking-[0.2em] uppercase" ng-bind="content.phase2_label"></div>
                <h2 class="anim-el text-4xl md:text-5xl font-bold mb-6 text-white" ng-bind="content.phase2_title"></h2>
                <p class="anim-el text-muted text-lg mb-8" ng-bind="content.phase2_desc"></p>
                <ul class="space-y-4">
                    <li class="anim-el flex items-center gap-4 bg-card p-4 rounded-xl border border-gray-800 hover:border-cyan-500 transition-colors duration-300">
                        <i class="fa-solid fa-sitemap text-cyan-400 text-2xl"></i> <span class="font-bold text-white" ng-bind="content.phase2_feat_1"></span>
                    </li>
                    <li class="anim-el flex items-center gap-4 bg-card p-4 rounded-xl border border-gray-800 hover:border-cyan-500 transition-colors duration-300">
                        <i class="fa-solid fa-users-gear text-cyan-400 text-2xl"></i> <span class="font-bold text-white" ng-bind="content.phase2_feat_2"></span>
                    </li>
                    <li class="anim-el flex items-center gap-4 bg-card p-4 rounded-xl border border-gray-800 hover:border-cyan-500 transition-colors duration-300">
                        <i class="fa-solid fa-list-check text-cyan-400 text-2xl"></i> <span class="font-bold text-white" ng-bind="content.phase2_feat_3"></span>
                    </li>
                </ul>
            </div>
        </div>
    </section>

    <!-- PHASE 3: ORANGE -->
    <section id="sec-phase3" class="min-h-screen flex items-center justify-center relative py-24" scroll-observer>
        <div class="container mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <div class="order-2 lg:order-1">
                <div class="anim-el inline-block px-4 py-2 rounded-lg bg-orange-500 text-black text-xs font-bold mb-6 tracking-[0.2em] uppercase" ng-bind="content.phase3_label"></div>
                <h2 class="anim-el text-5xl md:text-6xl font-black mb-8 text-white" ng-bind="content.phase3_title"></h2>
                <p class="anim-el text-xl text-gray-300 mb-10 leading-relaxed" ng-bind="content.phase3_desc"></p>

                <div class="space-y-4">
                    <div class="anim-el bg-card p-5 rounded-xl border border-gray-700 flex items-center gap-5 hover:border-orange-500 transition-all duration-300 group">
                        <div class="w-14 h-14 rounded-full bg-orange-500/10 flex items-center justify-center flex-shrink-0">
                            <i class="fa-solid fa-building text-2xl text-orange-500 group-hover:scale-110 transition-transform"></i>
                        </div>
                        <h3 class="text-lg font-bold text-white" ng-bind="content.phase3_feat_1"></h3>
                    </div>
                    <div class="anim-el bg-card p-5 rounded-xl border border-gray-700 flex items-center gap-5 hover:border-orange-500 transition-all duration-300 group">
                        <div class="w-14 h-14 rounded-full bg-orange-500/10 flex items-center justify-center flex-shrink-0">
                            <i class="fa-solid fa-handshake text-2xl text-orange-500 group-hover:scale-110 transition-transform"></i>
                        </div>
                        <h3 class="text-lg font-bold text-white" ng-bind="content.phase3_feat_2"></h3>
                    </div>
                    <div class="anim-el bg-card p-5 rounded-xl border border-gray-700 flex items-center gap-5 hover:border-orange-500 transition-all duration-300 group">
                        <div class="w-14 h-14 rounded-full bg-orange-500/10 flex items-center justify-center flex-shrink-0">
                            <i class="fa-solid fa-id-card text-2xl text-orange-500 group-hover:scale-110 transition-transform"></i>
                        </div>
                        <h3 class="text-lg font-bold text-white" ng-bind="content.phase3_feat_3"></h3>
                    </div>
                </div>
            </div>
            <div class="order-1 lg:order-2 anim-el h-[500px] lg:h-[600px] rounded-3xl overflow-hidden border border-gray-800 relative group shadow-2xl">
                <div class="absolute inset-0 bg-orange-500/10 z-10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <img src="/images/FPTSW2650.webp" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" alt="OJT Environment">
                <div class="absolute bottom-8 left-8 bg-dark/80 backdrop-blur-md border border-orange-500 px-6 py-4 rounded-2xl z-20">
                    <div class="text-orange-500 font-bold text-2xl">100%</div>
