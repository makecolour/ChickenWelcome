<script>
    var app = angular.module('fptApp', ['ngSanitize']);

    // --- MAIN CONTROLLER ---
    // QUAN TRỌNG: Sử dụng mảng ['$scope', ...] để không bị lỗi khi nén JS
    app.controller('MainController', ['$scope', '$http', '$timeout', function($scope, $http, $timeout) {

        // Language Setting
        $scope.lang = 'vi';
        $scope.isSwitching = false;

        // 1. Init: Check LocalStorage
        try {
            var savedLang = localStorage.getItem('fpt_lang');
            $scope.currentLang = savedLang ? savedLang : 'vi';
        } catch (e) {
            $scope.currentLang = 'vi';
        }

        // 2. Function to Load Content from API
        // (Logic này đã được đưa vào setLang để sync animation)

        // 3. Function to Set Language (Animation + API Call)
        $scope.setLang = function(lang) {
            if ($scope.currentLang === lang) return;

            $scope.isSwitching = true; // Trigger fade out

            // Anime.js Fade Out
            anime({
                targets: '#main-content',
                opacity: [1, 0],
                translateY: [0, 20],
                duration: 400,
                easing: 'easeInOutQuad',
                complete: function() {
                    // Update State inside Angular
                    $scope.$apply(function() {
                        $scope.currentLang = lang;
                        try { localStorage.setItem('fpt_lang', lang); } catch(e){}

                        // API Call
                        $http.get('/api/content?lang=' + lang).then(function(response) {
                            $scope.content = response.data.content;
                            $scope.curriculum = response.data.curriculum;

                            // Wait for DOM update then Fade In
                            $timeout(function() {
                                $scope.isSwitching = false; // Remove hidden class
                                anime({
                                    targets: '#main-content',
                                    opacity: [0, 1],
                                    translateY: [20, 0],
                                    duration: 400,
                                    easing: 'easeOutQuad'
                                });
                            }, 50);
                        });
                    });
                }
            });
        };

        // 4. Initial Load
        $http.get('/api/content?lang=' + $scope.currentLang).then(function(response) {
            $scope.content = response.data.content;
            $scope.curriculum = response.data.curriculum;
        });

        // Navigation Sections
        $scope.sections = [
            { id: 'sec-1', name: 'Hero' },
            { id: 'sec-2', name: 'Why FPT' },
            { id: 'sec-3', name: 'Market' },
            { id: 'sec-4', name: 'Methodology' },
            { id: 'sec-5', name: 'Roadmap' },
            { id: 'sec-6', name: 'Combo' },
            { id: 'sec-7', name: 'OJT' },
            { id: 'sec-8', name: 'Capstone' },
            { id: 'sec-9', name: 'Curriculum' },
            { id: 'sec-10', name: 'Closing' }
        ];

        $scope.activeSection = 'sec-1';

        $scope.scrollTo = function(id) {
            var element = document.getElementById(id);
            if(element) {
                element.scrollIntoView({ behavior: 'smooth' });
            }
        };

        $scope.setActiveSection = function(id) {
            $scope.activeSection = id;
        };
    }]);

    // --- SCROLL OBSERVER DIRECTIVE ---
    app.directive('scrollObserver', function() {
        return {
            restrict: 'A',
            link: function(scope, element, attrs) {
                var id = attrs.id;
                var options = { threshold: 0.2 };

                // Kiểm tra trình duyệt có hỗ trợ IntersectionObserver không
                if ('IntersectionObserver' in window) {
                    var observer = new IntersectionObserver(function(entries) {
                        if(entries[0].isIntersecting) {
                            scope.$applyAsync(function() {
                                scope.setActiveSection(id);
                            });

                            if(!element.hasClass('animated')) {
                                element.addClass('animated');
                                anime({
                                    targets: element[0].querySelectorAll('.anim-el'),
                                    opacity: [0, 1],
                                    translateY: [50, 0],
                                    duration: 1000,
                                    easing: 'easeOutExpo',
                                    delay: anime.stagger(150)
                                });
                            }
                        }
                    }, options);
                    observer.observe(element[0]);

                    scope.$on('$destroy', function() {
                        observer.disconnect();
                    });
                }
            }
        };
    });
</script>
