<!DOCTYPE html>
<html lang="vi" class="scroll-smooth" ng-app="fptApp">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon">
    <title><%= title %></title>
    <%- include('partials/head') %>
</head>
<body class="bg-dark text-gray-200 overflow-x-hidden font-sans leading-relaxed" ng-controller="MainController">

<!-- 3. LANGUAGE SWITCHER -->
<div class="fixed top-6 right-8 z-[60] flex items-center gap-2 bg-card border border-gray-700 rounded-full p-1 shadow-lg" ng-cloak>
    <button ng-click="setLang('vi')"
            class="px-4 py-1.5 rounded-full text-sm font-bold transition-all duration-300"
            ng-class="{'bg-accentGreen text-black': currentLang === 'vi', 'text-gray-400 hover:text-white': currentLang !== 'vi'}">
        VN
    </button>
    <button ng-click="setLang('en')"
            class="px-4 py-1.5 rounded-full text-sm font-bold transition-all duration-300"
            ng-class="{'bg-accentBlue text-black': currentLang === 'en', 'text-gray-400 hover:text-white': currentLang !== 'en'}">
        EN
    </button>
</div>

<!-- 4. NAVIGATION -->
<nav class="fixed right-8 top-1/2 transform -translate-y-1/2 z-50 flex flex-col gap-4" ng-cloak>
    <a ng-repeat="sec in sections"
       href="javascript:void(0)"
       ng-click="scrollTo(sec.id)"
       class="nav-dot w-3 h-3 rounded-full bg-gray-600 hover:bg-accentGreen cursor-pointer block"
       ng-class="{ 'active': activeSection === sec.id }"
       title="{{ sec.name }}">
    </a>
</nav>

<!-- 5. MAIN CONTENT (Wrapped in ID for AnimeJS targeting) -->
<main id="main-content">

    <!-- SECTION 1: HERO -->
    <section id="sec-1" class="min-h-screen flex items-center justify-center relative glow-bg-green py-24" scroll-observer>
        <div class="container mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
            <div class="z-10">
                <div class="anim-el inline-block px-4 py-2 rounded-full bg-green-900/30 text-accentGreen font-bold text-sm mb-6 border border-accentGreen/20 shadow-[0_0_15px_rgba(0,255,157,0.1)]">
                    FPT UNIVERSITY
                </div>
                <h1 class="anim-el text-6xl md:text-7xl lg:text-8xl font-extrabold leading-[1.1] mb-8 text-white tracking-tight">
                    SOFTWARE <br><span class="text-transparent bg-clip-text bg-gradient-to-r from-accentGreen to-accentBlue">ENGINEERING</span>
                </h1>
                <p class="anim-el text-2xl md:text-3xl text-white mt-4 font-medium" ng-bind="content.hero_subtitle"></p>
                <p class="anim-el text-muted mt-6 text-lg md:text-xl max-w-lg leading-relaxed" ng-bind="content.hero_desc"></p>
            </div>
            <div class="anim-el h-[400px] lg:h-[600px] rounded-3xl overflow-hidden border border-gray-800 shadow-2xl z-10 relative group">
                <div class="absolute inset-0 bg-gradient-to-t from-dark/80 to-transparent z-10"></div>
                <img src="/images/LNAT_Hinh1.jpg" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" alt="Coding">
            </div>
        </div>
    </section>

    <!-- SECTION 2: WHY FPT -->
    <section id="sec-2" class="min-h-screen flex items-center justify-center relative py-24" scroll-observer>
        <div class="container mx-auto px-6">
            <h2 class="anim-el text-4xl md:text-5xl font-bold mb-20 pl-6 border-l-8 border-accentGreen text-white leading-tight" ng-bind-html="content.why_title"></h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-10">
                <div class="anim-el bg-card p-8 lg:p-10 rounded-3xl border border-gray-800 hover:border-accentGreen transition-all duration-300 group hover:-translate-y-2 hover:shadow-[0_10px_30px_rgba(0,255,157,0.05)]">
                    <div class="w-16 h-16 rounded-2xl bg-accentGreen/10 text-accentGreen flex items-center justify-center text-3xl mb-8 group-hover:scale-110 transition-transform">
                        <i class="fa-solid fa-certificate"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-white mb-4" ng-bind="content.why_1_title"></h3>
                    <p class="text-muted leading-relaxed" ng-bind="content.why_1_desc"></p>
                </div>
                <div class="anim-el bg-card p-8 lg:p-10 rounded-3xl border border-gray-800 hover:border-accentGreen transition-all duration-300 group hover:-translate-y-2 hover:shadow-[0_10px_30px_rgba(0,255,157,0.05)]">
                    <div class="w-16 h-16 rounded-2xl bg-accentGreen/10 text-accentGreen flex items-center justify-center text-3xl mb-8 group-hover:scale-110 transition-transform">
                        <i class="fa-solid fa-briefcase"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-white mb-4" ng-bind="content.why_2_title"></h3>
                    <p class="text-muted leading-relaxed" ng-bind="content.why_2_desc"></p>
                </div>
                <div class="anim-el bg-card p-8 lg:p-10 rounded-3xl border border-gray-800 hover:border-accentGreen transition-all duration-300 group hover:-translate-y-2 hover:shadow-[0_10px_30px_rgba(0,255,157,0.05)]">
                    <div class="w-16 h-16 rounded-2xl bg-accentGreen/10 text-accentGreen flex items-center justify-center text-3xl mb-8 group-hover:scale-110 transition-transform">
                        <i class="fa-solid fa-earth-asia"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-white mb-4" ng-bind="content.why_3_title"></h3>
                    <p class="text-muted leading-relaxed" ng-bind="content.why_3_desc"></p>
                </div>
            </div>
        </div>
    </section>

    <!-- SECTION 3: MARKET -->
    <section id="sec-3" class="min-h-screen flex items-center justify-center relative glow-bg-blue py-24" scroll-observer>
        <div class="container mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24 items-center">
            <div>
                <h2 class="anim-el text-4xl md:text-5xl font-bold mb-12 text-white leading-tight" ng-bind-html="content.market_title"></h2>
                <div class="flex flex-wrap gap-12 mb-12">
                    <div class="anim-el">
                        <div class="text-6xl md:text-7xl font-black text-white tracking-tight">500K<span class="text-accentBlue">+</span></div>
                        <div class="text-sm uppercase tracking-[0.2em] mt-3 text-muted font-bold" ng-bind="content.market_stat_1"></div>
                    </div>
                    <div class="anim-el">
                        <div class="text-6xl md:text-7xl font-black text-white tracking-tight">Top 10</div>
                        <div class="text-sm uppercase tracking-[0.2em] mt-3 text-muted font-bold" ng-bind="content.market_stat_2"></div>
                    </div>
                </div>
                <ul class="space-y-6">
                    <li class="anim-el flex items-start gap-4 text-xl text-gray-300">
                        <div class="mt-1 w-6 h-6 rounded-full bg-accentGreen/20 flex items-center justify-center text-accentGreen text-sm flex-shrink-0"><i class="fa-solid fa-check"></i></div>
                        <span ng-bind="content.market_point_1"></span>
                    </li>
                    <li class="anim-el flex items-start gap-4 text-xl text-gray-300">
                        <div class="mt-1 w-6 h-6 rounded-full bg-accentGreen/20 flex items-center justify-center text-accentGreen text-sm flex-shrink-0"><i class="fa-solid fa-check"></i></div>
                        <span ng-bind="content.market_point_2"></span>
                    </li>
                </ul>
            </div>
            <div class="anim-el bg-card/80 backdrop-blur-sm border border-accentBlue/30 p-10 rounded-3xl shadow-[0_0_50px_rgba(0,184,255,0.1)]">
                <div class="w-16 h-16 rounded-2xl bg-accentBlue/20 text-accentBlue flex items-center justify-center text-3xl mb-8">
                    <i class="fa-solid fa-arrow-trend-up"></i>
                </div>
                <h3 class="text-3xl font-bold text-white mb-6" ng-bind="content.market_opp_title"></h3>
                <p class="text-muted text-lg leading-relaxed" ng-bind="content.market_opp_desc"></p>
            </div>
        </div>
    </section>

    <!-- SECTION 4: METHODOLOGY -->
    <section id="sec-4" class="min-h-screen flex items-center justify-center relative py-24" scroll-observer>
        <div class="container mx-auto px-6">
            <h2 class="anim-el text-center text-4xl md:text-5xl font-bold mb-20 text-white" ng-bind="content.method_title"></h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-10 lg:gap-16">
                <div class="anim-el bg-card p-10 lg:p-12 rounded-3xl border border-gray-800 hover:border-accentGreen transition-all duration-300 group">
                    <h3 class="text-3xl font-bold text-white mb-8 flex items-center gap-4">
                        <div class="w-12 h-12 rounded-xl bg-accentGreen/10 flex items-center justify-center"><i class="fa-solid fa-robot text-accentGreen text-2xl"></i></div>
                        <span ng-bind="content.method_tech_title"></span>
                    </h3>
                    <ul class="space-y-5 text-lg text-muted">
                        <li class="flex items-center gap-4"><span class="w-2 h-2 bg-accentGreen rounded-full flex-shrink-0"></span> <span><strong>ChatGPT:</strong> <span ng-bind="content.method_tech_1"></span></span></li>
                        <li class="flex items-center gap-4"><span class="w-2 h-2 bg-accentGreen rounded-full flex-shrink-0"></span> <span><strong>GitHub Copilot:</strong> <span ng-bind="content.method_tech_2"></span></span></li>
                        <li class="flex items-center gap-4"><span class="w-2 h-2 bg-accentGreen rounded-full flex-shrink-0"></span> <span><strong>Figma AI:</strong> <span ng-bind="content.method_tech_3"></span></span></li>
                        <li class="flex items-center gap-4"><span class="w-2 h-2 bg-accentGreen rounded-full flex-shrink-0"></span> <span><strong>DevOps:</strong> <span ng-bind="content.method_tech_4"></span></span></li>
                    </ul>
                </div>
                <div class="anim-el bg-card p-10 lg:p-12 rounded-3xl border border-gray-800 hover:border-accentBlue transition-all duration-300 group">
                    <h3 class="text-3xl font-bold text-white mb-8 flex items-center gap-4">
                        <div class="w-12 h-12 rounded-xl bg-accentBlue/10 flex items-center justify-center"><i class="fa-solid fa-diagram-project text-accentBlue text-2xl"></i></div>
                        <span ng-bind="content.method_pbl_title"></span>
                    </h3>
                    <ul class="space-y-5 text-lg text-muted">
                        <li class="flex items-center gap-4"><span class="w-2 h-2 bg-accentBlue rounded-full flex-shrink-0"></span> <span ng-bind="content.method_pbl_1"></span></li>
                        <li class="flex items-center gap-4"><span class="w-2 h-2 bg-accentBlue rounded-full flex-shrink-0"></span> <span ng-bind="content.method_pbl_2"></span></li>
                        <li class="flex items-center gap-4"><span class="w-2 h-2 bg-accentBlue rounded-full flex-shrink-0"></span> <span ng-bind="content.method_pbl_3"></span></li>
                        <li class="flex items-center gap-4"><span class="w-2 h-2 bg-accentBlue rounded-full flex-shrink-0"></span> <span ng-bind="content.method_pbl_4"></span></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- SECTION 5: ROADMAP -->
    <section id="sec-5" class="min-h-screen flex items-center justify-center relative glow-bg-green py-24" scroll-observer>
        <div class="container mx-auto px-6">
            <h2 class="anim-el text-4xl md:text-5xl font-bold mb-24 text-center text-white" ng-bind="content.roadmap_title"></h2>

            <div class="relative max-w-6xl mx-auto">
                <div class="absolute top-1/2 left-0 w-full h-1 bg-gray-800 transform -translate-y-1/2 hidden md:block z-0 rounded-full"></div>
                <div class="grid grid-cols-1 md:grid-cols-5 gap-6 relative z-10">
                    <!-- 1 -->
                    <div class="anim-el bg-card p-6 rounded-2xl border border-gray-800 text-center md:transform md:hover:-translate-y-4 transition-transform duration-300 shadow-lg">
                        <div class="w-16 h-16 rounded-full bg-dark border-4 border-accentGreen text-white font-bold flex items-center justify-center mx-auto mb-6 relative z-20 text-lg shadow-[0_0_20px_rgba(0,255,157,0.3)]">Prep</div>
                        <h4 class="text-accentGreen font-bold text-xl mb-2" ng-bind="content.roadmap_1_title"></h4>
                        <p class="text-sm text-muted" ng-bind="content.roadmap_1_desc"></p>
                    </div>
                    <!-- 2 -->
                    <div class="anim-el bg-card p-6 rounded-2xl border border-gray-800 text-center md:transform md:hover:-translate-y-4 transition-transform duration-300 shadow-lg">
                        <div class="w-16 h-16 rounded-full bg-dark border-4 border-gray-700 text-white font-bold flex items-center justify-center mx-auto mb-6 relative z-20 text-lg">1-3</div>
                        <h4 class="text-white font-bold text-xl mb-2" ng-bind="content.roadmap_2_title"></h4>
                        <p class="text-sm text-muted" ng-bind="content.roadmap_2_desc"></p>
                    </div>
                    <!-- 3 -->
                    <div class="anim-el bg-card p-6 rounded-2xl border border-gray-800 text-center md:transform md:hover:-translate-y-4 transition-transform duration-300 shadow-lg">
                        <div class="w-16 h-16 rounded-full bg-dark border-4 border-gray-700 text-white font-bold flex items-center justify-center mx-auto mb-6 relative z-20 text-lg">4-5</div>
                        <h4 class="text-white font-bold text-xl mb-2" ng-bind="content.roadmap_3_title"></h4>
                        <p class="text-sm text-muted" ng-bind="content.roadmap_3_desc"></p>
                    </div>
                    <!-- 4 -->
                    <div class="anim-el bg-card p-6 rounded-2xl border border-gray-800 text-center md:transform md:hover:-translate-y-4 transition-transform duration-300 shadow-lg">
                        <div class="w-16 h-16 rounded-full bg-dark border-4 border-accentBlue text-white font-bold flex items-center justify-center mx-auto mb-6 relative z-20 text-lg shadow-[0_0_20px_rgba(0,184,255,0.3)]">6</div>
                        <h4 class="text-accentBlue font-bold text-xl mb-2" ng-bind="content.roadmap_4_title"></h4>
                        <p class="text-sm text-muted" ng-bind="content.roadmap_4_desc"></p>
                    </div>
                    <!-- 5 -->
                    <div class="anim-el bg-card p-6 rounded-2xl border border-gray-800 text-center md:transform md:hover:-translate-y-4 transition-transform duration-300 shadow-lg">
                        <div class="w-16 h-16 rounded-full bg-dark border-4 border-gray-700 text-white font-bold flex items-center justify-center mx-auto mb-6 relative z-20 text-lg">7-9</div>
                        <h4 class="text-white font-bold text-xl mb-2" ng-bind="content.roadmap_5_title"></h4>
                        <p class="text-sm text-muted" ng-bind="content.roadmap_5_desc"></p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- SECTION 6: COMBO SPECIALIZATION -->
    <section id="sec-6" class="min-h-screen flex items-center justify-center relative py-24" scroll-observer>
        <div class="container mx-auto px-6">
            <h2 class="anim-el text-4xl md:text-5xl font-bold mb-16 pl-6 border-l-8 border-accentBlue text-white leading-tight" ng-bind-html="content.combo_title"></h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <div class="anim-el bg-card p-8 rounded-2xl border border-t-4 border-accentGreen hover:bg-gray-900 transition-all duration-300 hover:-translate-y-2">
                    <div class="flex items-center gap-4 mb-6">
                        <i class="fa-solid fa-brain text-accentGreen text-3xl"></i>
                        <h3 class="text-xl font-bold text-white">AI & Data</h3>
                    </div>
                    <p class="text-muted text-sm leading-relaxed" ng-bind="content.combo_1_desc"></p>
                </div>
                <div class="anim-el bg-card p-8 rounded-2xl border border-t-4 border-accentBlue hover:bg-gray-900 transition-all duration-300 hover:-translate-y-2">
                    <div class="flex items-center gap-4 mb-6">
                        <i class="fa-solid fa-microchip text-accentBlue text-3xl"></i>
                        <h3 class="text-xl font-bold text-white">IoT & Embedded</h3>
                    </div>
                    <p class="text-muted text-sm leading-relaxed" ng-bind="content.combo_2_desc"></p>
                </div>
                <div class="anim-el bg-card p-8 rounded-2xl border border-t-4 border-white hover:bg-gray-900 transition-all duration-300 hover:-translate-y-2">
                    <div class="flex items-center gap-4 mb-6">
                        <i class="fa-solid fa-bridge text-white text-3xl"></i>
                        <h3 class="text-xl font-bold text-white">Bridge SE</h3>
                    </div>
                    <p class="text-muted text-sm leading-relaxed" ng-bind="content.combo_3_desc"></p>
                </div>
                <div class="anim-el bg-card p-8 rounded-2xl border border-t-4 border-purple-500 hover:bg-gray-900 transition-all duration-300 hover:-translate-y-2">
                    <div class="flex items-center gap-4 mb-6">
                        <i class="fa-brands fa-windows text-purple-500 text-3xl"></i>
                        <h3 class="text-xl font-bold text-white">.NET / Java</h3>
                    </div>
                    <p class="text-muted text-sm leading-relaxed" ng-bind="content.combo_4_desc"></p>
                </div>
            </div>
        </div>
    </section>

    <!-- SECTION 7: OJT -->
    <section id="sec-7" class="min-h-screen flex items-center justify-center relative glow-bg-blue py-24" scroll-observer>
        <div class="container mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <div class="anim-el h-[400px] lg:h-[500px] rounded-3xl overflow-hidden border border-gray-800 shadow-2xl relative group">
                <div class="absolute inset-0 bg-gradient-to-t from-dark/50 to-transparent z-10"></div>
                <img src="/images/FPTSW2650.webp" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" alt="FPT Software Office">
            </div>
            <div>
                <div class="anim-el inline-block px-4 py-2 rounded-lg border border-accentBlue/50 bg-accentBlue/10 text-accentBlue text-xs font-bold mb-6 tracking-[0.2em] uppercase">Học kỳ 6</div>
                <h2 class="anim-el text-4xl md:text-6xl font-bold mb-8 text-white" ng-bind="content.ojt_title"></h2>
                <p class="anim-el text-2xl text-white font-medium mb-8" ng-bind="content.ojt_subtitle"></p>
                <ul class="space-y-5">
                    <li class="anim-el flex items-center gap-4 text-lg text-muted">
                        <div class="w-8 h-8 rounded-full bg-accentBlue/20 flex items-center justify-center text-accentBlue text-sm"><i class="fa-solid fa-check"></i></div>
                        <span ng-bind="content.ojt_1"></span>
                    </li>
                    <li class="anim-el flex items-center gap-4 text-lg text-muted">
                        <div class="w-8 h-8 rounded-full bg-accentBlue/20 flex items-center justify-center text-accentBlue text-sm"><i class="fa-solid fa-check"></i></div>
                        <span ng-bind="content.ojt_2"></span>
                    </li>
                    <li class="anim-el flex items-center gap-4 text-lg text-muted">
                        <div class="w-8 h-8 rounded-full bg-accentBlue/20 flex items-center justify-center text-accentBlue text-sm"><i class="fa-solid fa-check"></i></div>
                        <span ng-bind="content.ojt_3"></span>
                    </li>
                    <li class="anim-el flex items-center gap-4 text-lg text-muted">
                        <div class="w-8 h-8 rounded-full bg-accentBlue/20 flex items-center justify-center text-accentBlue text-sm"><i class="fa-solid fa-check"></i></div>
                        <span ng-bind="content.ojt_4"></span>
                    </li>
                </ul>
            </div>
        </div>
    </section>

    <!-- SECTION 8: CAPSTONE -->
    <section id="sec-8" class="min-h-screen flex items-center justify-center relative py-24" scroll-observer>
        <div class="container mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24">
            <div class="anim-el flex flex-col justify-center">
                <h2 class="text-4xl md:text-5xl font-bold text-white mb-12" ng-bind="content.capstone_title"></h2>
                <ul class="space-y-8">
                    <li class="bg-card p-8 rounded-2xl border border-gray-800 flex items-start gap-6 hover:border-accentGreen transition-colors group">
                        <div class="w-12 h-12 rounded-xl bg-accentGreen/10 flex items-center justify-center text-accentGreen text-2xl mt-1 flex-shrink-0 group-hover:scale-110 transition-transform">
                            <i class="fa-solid fa-list-check"></i>
                        </div>
                        <div>
                            <h4 class="font-bold text-white text-xl mb-2">Project Management</h4>
                            <p class="text-base text-muted" ng-bind="content.capstone_pm_desc"></p>
                        </div>
                    </li>
                    <li class="bg-card p-8 rounded-2xl border border-gray-800 flex items-start gap-6 hover:border-accentGreen transition-colors group">
                        <div class="w-12 h-12 rounded-xl bg-accentGreen/10 flex items-center justify-center text-accentGreen text-2xl mt-1 flex-shrink-0 group-hover:scale-110 transition-transform">
                            <i class="fa-solid fa-rocket"></i>
                        </div>
                        <div>
                            <h4 class="font-bold text-white text-xl mb-2">Entrepreneurship</h4>
                            <p class="text-base text-muted" ng-bind="content.capstone_ent_desc"></p>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="anim-el bg-gradient-to-br from-gray-900 to-black p-12 rounded-[2.5rem] border border-accentGreen/30 flex flex-col justify-center shadow-[0_0_60px_rgba(0,255,157,0.08)] relative overflow-hidden">
                <div class="absolute top-0 right-0 w-64 h-64 bg-accentGreen/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
                <div class="relative z-10">
                    <div class="text-accentGreen text-7xl mb-8"><i class="fa-solid fa-trophy"></i></div>
                    <h3 class="text-4xl font-bold text-white mb-6">Capstone Project</h3>
                    <p class="text-xl text-muted mb-8 leading-relaxed" ng-bind="content.capstone_main_desc"></p>
                    <div class="p-6 bg-white/5 rounded-2xl border-l-4 border-accentGreen italic text-base text-gray-300">
                        "<span ng-bind="content.capstone_quote"></span>"
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- SECTION 9: CURRICULUM TABLE -->
    <section id="sec-9" class="min-h-screen flex items-center justify-center relative glow-bg-green py-24" scroll-observer>
        <div class="container mx-auto px-6 w-full max-w-6xl">
            <h2 class="anim-el text-center text-4xl md:text-5xl font-bold mb-16 text-white" ng-bind="content.curriculum_title"></h2>
            <div class="anim-el overflow-hidden rounded-2xl border border-gray-800 bg-card shadow-2xl" ng-cloak>
                <div class="overflow-x-auto max-h-[70vh] overflow-y-auto custom-scrollbar">
                    <table class="w-full text-left font-mono [&_td]:p-4 [&_th]:p-4 [&_tr]:border-b [&_tr]:border-gray-800 hover:[&_tbody_tr]:bg-white/5 transition-colors">
                        <thead class="bg-gray-900 text-accentGreen sticky top-0 z-20 font-bold uppercase text-sm tracking-wider shadow-md">
                        <tr>
                            <th class="w-16">STT</th>
                            <th class="w-32">Code</th>
                            <th ng-bind="content.curriculum_col_name"></th>
                            <th class="w-24 text-right" ng-bind="content.curriculum_col_term"></th>
                        </tr>
                        </thead>
                        <tbody class="text-sm text-gray-300 divide-y divide-gray-800">
